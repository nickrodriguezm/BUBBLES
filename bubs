class Bubble {
  float x;
  float y;
  float diam;
  color teal = color(0,255,255,50);
  color pink = color(255,155,155,100);
  int bubColor;
  
  //constructor: what all bubbles have in common
  Bubble() {
    x = random(width);
    y = height;
    diam = random(25,60);
 }

  void display(int bubColor) {
    noStroke();
    if (bubColor == 1) {
      fill(255,255,0);
    }
    else {
      fill(0,255,255);
    }
    ellipse(x,y,diam,diam);
  }
  
  void ascend() {
    y--;
  }
  
  void top() {
    if (y < diam/2) {
      y = diam/2;
    }
  }
  
  void wobble() {
    x = x + random(-1.2,1.2);
  }

}
